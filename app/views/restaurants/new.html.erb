<div class = 'container'>
  <div class = 'row'>
    <div class = 'col-xs-12 col-sm-10 col-sm-offset-1'>

      <h1> Add a new Restaurant </h1>

      <%= simple_form_for(@restaurant) do |t| %>

        <%= t.input :name%>
        <%= t.input :address %>
        <%= t.input :phone_number %>
        <%= t.input :category, collection: Restaurant::CATEGORIES %>
        <br>
        <%= t.submit class: 'btn btn-success'%>
        <% end %>
        <br>
        <br>
        <%= link_to "Back to list", restaurants_path, class: 'btn btn-primary'%>
    </div>
  </div>
</div>
